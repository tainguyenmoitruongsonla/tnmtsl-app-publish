<script>
    $(document).ready(function () {
        $('.dropdown-content').hide();

        $(".dropdown-text").click(function () {
            $(this).parent().next().slideToggle();
        });

        $('.showAnnotateLayerBtn').click(function () {
            $('.annotate-layer').toggle('slow');
        });
    });
</script>