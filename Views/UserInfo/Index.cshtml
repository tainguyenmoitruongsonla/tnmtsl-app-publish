@using WaterResource.Service;
@{
    ViewBag.Title = "THÔNG TIN TÀI KHOẢN";
    UserRightService _service = new UserRightService();
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (_service.IsViewAction("/thong-tin-ca-nhan", User.Identity.Name, "VIEW"))
{

<input type="hidden" id="userName" name="name" value="@User.Identity.Name" />
<div ng-controller="myCntrl as demo">
    <script src="~/Scripts/UserInfo/Service.js"></script>
    <script src="~/Scripts/UserInfo/Controller.js"></script>
    <section class="content py-2 px-0">
        <div class="col-12">
            <div class="">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row col-12 p-0 m-0 justify-content-end align-items-center">
                            <button class="btn btn-addnew m-2" ng-click="EditItem()"> <i class="fa-solid fa-pen"></i> </button>
                        </div>
                        <div class="form-horizontal">
                            <div class="form-group row" ng-show="IsUpdate">
                                <label class="col-md-3 control-label">Loại tài khoản</label>
                                <div class="col-md-9">
                                    <div class="floating-input w-100 d-flex m-0 center-center mb-3">
                                        <div class="form-check-inline">
                                            <label class="form-check-label position-sticky" for="AccountType1">
                                                <input type="radio" class="form-check-input" placeholder=" " id="AccountType1" name="AccountType" ng-value="0" ng-model="User.AccountType" />
                                                Cá nhân
                                            </label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label class="form-check-label position-sticky" for="AccountType2">
                                                <input type="radio" class="form-check-input" placeholder=" " id="AccountType2" name="AccountType" ng-value="1" ng-model="User.AccountType" />
                                                Tổ chức
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row" ng-show="!IsUpdate">
                                <label class="col-md-3 control-label">Loại tài khoản</label>
                                <div class="col-md-9">
                                    <input ng-readonly="!IsUpdate" type="text" class="form-control" ng-model="User[0].AccountTypeName" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 control-label">Tên cá nhân/Tổ chức</label>
                                <div class="col-md-9">
                                    <input ng-readonly="!IsUpdate" type="text" class="form-control" ng-model="User[0].FullName" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 control-label">Tên đăng nhập</label>
                                <div class="col-md-9">
                                    <input ng-readonly="!IsUpdate" type="text" class="form-control" ng-model="User[0].UserName" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 control-label">Số điện thoại</label>
                                <div class="col-md-9">
                                    <input ng-readonly="!IsUpdate" type="text" class="form-control" ng-model="User[0].PhoneNumber" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 control-label">Email</label>
                                <div class="col-md-9">
                                    <input ng-readonly="!IsUpdate" type="text" class="form-control" ng-model="User[0].Email" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 control-label">Địa chỉ</label>
                                <div class="col-md-9">
                                    <input ng-readonly="!IsUpdate" type="text" class="form-control" ng-model="User[0].Address" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer" ng-show="IsUpdate">
                        <button type="button" class="btn btn-link" ng-click="Close()" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-addnew" data-dismiss="modal" ng-click="Save()">Lưu thay đổi</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
}
else
{
@Html.Partial("_401")
}