<div class="sidenav p-0" id="aside">
    <div>
        <div class="doc-title py-2 px-0 col-12 d-flex align-items-center" style="background:#15538f; color: #fff; height: 50px">
            <div class="d-flex col-12 p-0 align-items-center">
                <div class="col-10">
                    <div class="admission-title d-flex center-center">
                        <p class="m-0 col-12 p-0 text-left text-uppercase font-16">{{HeaderAction}}</p>
                    </div>
                </div>
                <a href="javascript:void(0)" class="closebtn m-0 p-0 text-white" ng-click="closeAside()">&times;</a>
            </div>
        </div>
    </div>
    <div class="col-12">
        <fieldset class="col-12 border border-secondary p-3 mb-2 background-color bg-lightgray">
            <legend class="font-18 font-weight-bold text-primary" style="width: auto">Thông tin</legend>
            <div class="mb-2">
                <div class="col-sm-12 p-0 row">
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" ng-readonly="Action === 'Update'" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.StationCode">
                            <label> Mã Trạm </label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.Name">
                            <label> Tên trạm</label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.Huyen">
                            <label> Huyện </label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.Xa">
                            <label> Xã </label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.Lat">
                            <label> Vĩ độ </label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.Lng">
                            <label> Kinh Độ	</label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.StartDate">
                            <label> Năm bắt đầu đo </label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="text" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" placeholder=" " ng-model="item.EndDate">
                            <label> Năm kết thúc đo	</label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="file" accept="application/pdf" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" id="fileAttachsHSTL" placeholder=" " ng-model="item.HoSoThanhLap">
                            <label> Hồ sơ thành lập trạm </label>
                        </div>
                    </div>
                    <div class="col-md-6 py-3">
                        <div class="floating-label">
                            <input type="file" accept="application/pdf" class="floating-input w-100 ng-pristine ng-untouched ng-valid ng-empty" id="fileAttachsHSHD" placeholder="" ng-model="item.HoSoHoatDong">
                            <label> Hồ sơ trạm hoạt động </label>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="pt-1 col-sm-12 d-flex justify-content-end">
        <button type="button" class="btn btn-sm btn-addnew mx-2" ng-click="Save()"><i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu </button>
    </div>
</div>