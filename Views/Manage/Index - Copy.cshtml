@model WaterResource.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Quản lý";
}

<section class="content container-fluid">
    <div class="col-md-12">
        <!-- Horizontal Form -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title.</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal">
                <div class="box-body">
                    <p class="text-success">@ViewBag.StatusMessage</p>
                    <div>
                        <h4>
                            Thay đổi cài đặt tài khoản của bạn
                        </h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>Mật khẩu:</dt>
                            <dd>
                                [
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Thay đổi mật khẩu của bạn", "ChangePassword")
                                }
                                else
                                {
                                    @Html.ActionLink("Create", "SetPassword")
                                }
                                ]
                            </dd>
                            <dt>Đăng nhập bên ngoài:</dt>
                            <dd>
                                @Model.Logins.Count [
                                @Html.ActionLink("Quản lý", "ManageLogins") ]
                            </dd>
                            @*
                                Phone Numbers can used as a second factor of verification in a two-factor authentication system.

